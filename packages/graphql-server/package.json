{
  "name": "@monorepo/graphql-server",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "tsc --build --watch --preserveWatchOutput",
    "build": "tsc --build",
    "mesh:generate:schema": "graphql-mesh dump-schema --dir ./src/ --output ./src/generated/mesh.graphql",
    "mesh:generate:json": "graphql-mesh dump-schema --dir ./src/ --output ./src/generated/mesh.json",
    "mesh:generate:typings": "graphql-mesh typescript --dir ./src/ --output ./src/generated/mesh.ts"
  },
  "devDependencies": {
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@graphql-mesh/cli": "^0.29.1",
    "@graphql-mesh/config": "^0.15.3",
    "@graphql-mesh/openapi": "^0.15.0",
    "@graphql-mesh/runtime": "^0.13.3",
    "apollo-server-micro": "^2.23.0",
    "graphql": "^15.5.0"
  }
}
